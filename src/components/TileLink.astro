---
interface Props {
  href: string;
  class?: string;
  external?: boolean;
  ariaLabel?: string;
  tilt?: boolean;
}

const {
  href,
  class: className = "",
  external = false,
  ariaLabel,
  tilt = false,
} = Astro.props;

const target = external ? "_blank" : "_self";
const rel = external ? "noopener noreferrer" : undefined;
const baseClasses =
  "observer-fade-in-up opacity-0 bento-card group relative flex flex-col justify-between overflow-hidden p-6 text-left motion-safe:transition-all hover:shadow-2xl focus:outline-none focus-visible:ring-2 focus-visible:ring-main-gold/70 focus-visible:ring-offset-2 focus-visible:ring-offset-main-bg";
---

<a
  href={href}
  target={target}
  rel={rel}
  aria-label={ariaLabel}
  data-tilt={tilt ? "true" : undefined}
  class={`${baseClasses} ${className}`}
>
  <slot />
</a>
