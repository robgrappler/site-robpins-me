---
import type { LinkItem } from '../data/config';

interface Props {
  item: LinkItem;
}

const { item } = Astro.props;
const isExternal = item.href.startsWith('http');
const ctaLabel = item.cta ?? 'OPEN';
---

<a
  class={`link-card card card-body flex flex-col gap-4 transition duration-200 ${
    item.primary ? 'border border-slate-500/40' : ''
  }`}
  href={item.href}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noreferrer noopener' : undefined}
>
  <div class="flex flex-col gap-1">
    <h3 class="text-lg font-semibold text-white">{item.title}</h3>
    <p class="text-sm text-slate-400">{item.description}</p>
  </div>
  <div class="flex items-center justify-between">
    <span class="text-xs uppercase tracking-[0.3em] text-slate-500">Link</span>
    <span class="btn btn-outline btn-sm btn-ghost">{ctaLabel}</span>
  </div>
</a>
