---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Success | Robgrappler's">
    <div
        class="mx-auto flex min-h-[60vh] max-w-7xl flex-col items-center justify-center px-4 py-8 text-center sm:px-6 lg:px-8"
    >
        <h1
            class="font-b612 text-5xl font-black tracking-tight text-white mb-6"
        >
            Success!
        </h1>
        <p class="max-w-xl font-sans text-lg text-sub-paper/80 mb-12">
            Thanks for subscribing. You've been added to the list.
        </p>
        <a
            href="/"
            class="rounded-full bg-gold-500 px-8 py-3 font-sans text-sm font-bold uppercase tracking-widest text-ink-900 transition-all duration-300 hover:scale-105 hover:bg-gold-400 hover:shadow-lg hover:shadow-gold-500/20"
        >
            Return Home
        </a>
    </div>
</BaseLayout>
